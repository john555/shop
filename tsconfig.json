{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "lib": ["es2020", "dom"],
    "types": ["jest", "node"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/types/*": ["lib/common/types/*"],
      "@/api/*": ["lib/api/*"],
      "@/admin/*": ["lib/admin/*"],
      "@/common/*": ["lib/common/*"],
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
